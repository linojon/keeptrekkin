.row
  .md-col-12
    = title @hiker.name

.row
  .col-md-4
    - if @hiker.profile_image_url
      = cl_image_tag @hiker.profile_image_url, size: '300x200', crop: :fill
    - else
      %img.img-thumbnail{ data: { src: "holder.js/300x200/text:Profile Image" }}

    - if @hiker == current_hiker
      .well{ style: 'margin-top: 1em'}
        %h4 Private Info (Only Visible To You)
        %p= @hiker.email
        %p
          %strong Email Notifications:
          = current_hiker.disable_notifications? ? 'Disabled' : 'Enabled'
        %hr
        %h4 Social Connections
        = link_to 'Facebook Profile', '#', class: 'btn btn-sm btn-info'

        %hr
        %p= link_to 'Edit Profile', edit_hiker_path(@hiker), class: 'btn btn-primary'

  .col-md-8
    %p= @hiker.location

    = render 'mountains'

    - if @hiker.photos.present?
      %hr
      %h3 Gallery
      - @hiker.photos.each do |photo|
        %div.pull-left.padded
          - trip = photo.attachinariable
          - mtns = trip.mountains.map(&:name).join(', ')
          = cl_image_tag photo.path, size: '75x75', crop: :fill, title: mtns
          %p
            = link_to "#{trip.date.strftime('%b %-d, %Y')}", trip, title: mtns
