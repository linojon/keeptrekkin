.row
  - if current_hiker
    = title 'My Trips'
  - else
    = title 'Public Trips'
  .col-sm-2
    - if policy(Trip.new).new?
      = link_to 'Add a Trip', new_trip_path, class: 'btn btn-primary'
    %br
    %br
    %br
    %br
    - if current_hiker
      %p.centered
        = "#{current_hiker.mountains.count} out of #{Mountain.count} New Hampshire 4000-footers bagged!"
        - percent = (current_hiker.mountains.count * 100 / Mountain.count) if Mountain.count > 0
        .chart{ data: { percent: percent }}= "#{percent}%"
  #timeline.col-sm-8
    = render @trips

:coffeescript
  $ ->
    $('.chart').easyPieChart()