%nav.navbar.navbar-inverse.navbar-fixed-top{ role: :navigation }
  .navbar-inner
    .container-fluid
      / mobile 
      .navbar-header
        %button.navbar-toggle{ type: :button, data: { toggle: :collapse, target: '#navbar-collapse' } }
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{ href: '/' }= app_title
    
      #navbar-collapse.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li.dropdown
            %a.dropdown-toggle{ href:'#', 'data-toggle' => 'dropdown'} 
              Destinations
              %span.caret
            %ul.dropdown-menu{ role: 'menu'} 
              %li= link_to 'New Hampshire 4000 Footers', mountains_path
          %li= link_to 'Trips Feed', newsfeed_path
        - if current_hiker
          = link_to 'Me!', current_hiker, class: 'btn btn-primary navbar-btn', style: 'margin-left: 1em'
        - if policy(Trip.new).new?
          = link_to 'Add a Trip', new_trip_path, class: 'btn btn-success navbar-btn', style: 'margin-left: 1em'
        %ul.nav.navbar-nav.navbar-right

          - if current_hiker
            %li= link_to hiker_ribbon(current_hiker), edit_hiker_path(current_hiker)
          - else
            %li= link_to 'Sign in via Facebook', signin_path, class: 'js-sign_in'
